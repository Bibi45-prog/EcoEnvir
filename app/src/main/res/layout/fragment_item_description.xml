<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:id="@+id/scroll"
    android:layout_width="match_parent">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/background"
     tools:context=".ItemDescription">

  <ImageView
      android:id="@+id/imageView26"
      android:layout_width="411dp"
      android:layout_height="210dp"
      android:src="@drawable/gradient_bg"
      app:layout_constraintBottom_toTopOf="@+id/textView16"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="NotSibling" />

  <ImageView
      android:id="@+id/imageView27"
      android:layout_width="275dp"
      android:layout_height="129dp"
      android:src="@drawable/recycle_details"
      app:layout_constraintBottom_toBottomOf="@+id/imageView26"
      app:layout_constraintEnd_toEndOf="@+id/imageView26"
      app:layout_constraintStart_toStartOf="@+id/imageView26"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.555" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <EditText
       android:id="@+id/et_time"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginTop="44dp"
       android:background="@drawable/form_field_background"
       android:drawableStart="@drawable/ic_time_24"
       android:drawablePadding="5dp"
       android:editable="false"
       android:ems="10"
       android:focusable="false"
       android:hint="@string/hh_mm"
       android:inputType="date"
       android:paddingHorizontal="7dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/et_date"
       tools:ignore="SpeakableTextPresentCheck" />

   <EditText
       android:id="@+id/et_Address"
       android:layout_width="338dp"
       android:layout_height="84dp"
       android:layout_marginTop="44dp"
       android:background="@drawable/form_field_background"
       android:ems="10"
       android:includeFontPadding="true"
       android:inputType="textPostalAddress"
       android:paddingStart="10dp"
       android:paddingTop="10dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/et_Phone"
       tools:ignore="SpeakableTextPresentCheck" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_begin="-18dp" />

   <ImageView
       android:id="@+id/btnBack3"
       android:layout_width="35dp"
       android:layout_height="35dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:tint="@color/white" />

   <EditText
       android:id="@+id/et_date"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginTop="44dp"
       android:background="@drawable/form_field_background"
       android:drawableStart="@drawable/ic_baseline_calendar_today_24"
       android:drawablePadding="7dp"
       android:editable="false"
       android:ems="10"
       android:focusable="false"
       android:hint="DD/MM/YY"
       android:inputType="date"
       android:paddingHorizontal="5dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.506"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/et_Quantity"
       tools:ignore="SpeakableTextPresentCheck" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_begin="20dp" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_begin="418dp" />

   <TextView
       android:id="@+id/tv_date"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="10dp"
       android:text="Date"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/et_date"
       app:layout_constraintStart_toStartOf="@+id/et_date"
       app:layout_constraintTop_toBottomOf="@+id/et_Quantity" />

   <TextView
       android:id="@+id/textView29"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="12dp"
       android:text="Image"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/iv_uploadImageBox_cont"
       app:layout_constraintStart_toStartOf="@+id/iv_uploadImageBox_cont"
       app:layout_constraintTop_toBottomOf="@+id/et_Address" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnNextThree"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginStart="35dp"
       android:layout_marginTop="32dp"
       android:layout_marginEnd="35dp"
       android:layout_marginBottom="32dp"
       android:background="@drawable/button_bg"
       android:text="Next"
       android:textColor="@color/white"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/iv_uploadImageBox_cont"
       app:layout_constraintWidth_percent=".8" />

   <TextView
       android:id="@+id/textView26"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="10dp"
       android:text="Quantity"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/et_Quantity"
       app:layout_constraintStart_toStartOf="@+id/et_Quantity"
       app:layout_constraintTop_toBottomOf="@+id/et_ItemDescription" />

   <RelativeLayout
       android:id="@+id/iv_uploadImageBox_cont"
       android:layout_width="335dp"
       android:layout_height="138dp"
       android:layout_marginStart="38dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/form_field_background"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView29">// Only works inside a RelativeLayout

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_photo_camera_24" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingTop="65dp"
        android:text="Upload Image"
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_uploadImageBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

   </RelativeLayout>

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_begin="-7dp" />

   <EditText
       android:id="@+id/et_ItemDescription"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/form_field_background"
       android:ems="10"
       android:inputType="textEmailAddress"
       android:paddingStart="10dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.493"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView16"
       tools:ignore="SpeakableTextPresentCheck" />

   <EditText
       android:id="@+id/et_Quantity"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginTop="44dp"
       android:background="@drawable/form_field_background"
       android:ems="10"
       android:inputType="number"
       android:paddingStart="10dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.493"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/et_ItemDescription"
       tools:ignore="SpeakableTextPresentCheck" />

   <TextView
       android:id="@+id/tv_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="10dp"
       android:text="Time"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/et_time"
       app:layout_constraintStart_toStartOf="@+id/et_time"
       app:layout_constraintTop_toBottomOf="@+id/et_date" />

   <TextView
       android:id="@+id/tv_phone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="10dp"
       android:text="Phone Number"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/et_Phone"
       app:layout_constraintStart_toStartOf="@+id/et_Phone"
       app:layout_constraintTop_toBottomOf="@+id/et_time" />

   <TextView
       android:id="@+id/textView16"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="180dp"
       android:layout_marginBottom="10dp"
       android:text="Item Description"
       android:textColor="#000000"
       app:layout_constraintBottom_toTopOf="@+id/et_ItemDescription"
       app:layout_constraintStart_toStartOf="@+id/et_ItemDescription"
       app:layout_constraintTop_toBottomOf="@+id/btnBack3" />

   <TextView
       android:id="@+id/textView28"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="10dp"
       android:text="Address"
       android:textColor="#121212"
       app:layout_constraintBottom_toTopOf="@+id/et_Address"
       app:layout_constraintStart_toStartOf="@+id/et_Address"
       app:layout_constraintTop_toBottomOf="@+id/et_Phone" />

   <EditText
       android:id="@+id/et_Phone"
       android:layout_width="338dp"
       android:layout_height="48dp"
       android:layout_marginTop="44dp"
       android:background="@drawable/form_field_background"
       android:ems="10"
       android:inputType="phone"
       android:paddingStart="10dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/et_time"
       tools:ignore="SpeakableTextPresentCheck" />


  </androidx.constraintlayout.widget.ConstraintLayout>


 </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>